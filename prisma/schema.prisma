generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FeatureFlag {
  id                String   @id @default(uuid())
  name              String
  description       String?
  enabled           Boolean  @default(false)
  environment       String
  rolloutPercentage Int      @default(0) // 0 to 100
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

